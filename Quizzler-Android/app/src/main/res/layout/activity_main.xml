<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/mText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="47dp"
        android:textSize="25dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textCount"
        android:layout_width="178dp"
        android:layout_height="52dp"
        android:layout_alignEnd="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="111dp"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="282dp"
        android:layout_marginEnd="74dp"
        android:layout_marginRight="74dp"
        android:layout_marginBottom="325dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="50dp" />

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/chartQuiz"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="79dp"
        />


    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/chartAns"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="101dp"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="337dp"

        />


    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:max="10"
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:indeterminate="false"
        android:visibility="visible"
        />

    <io.github.kexanie.library.MathView
        android:id="@+id/math1"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="138dp"
        android:layout_toEndOf="@+id/chartAns"
        android:layout_toRightOf="@+id/chartAns">

    </io.github.kexanie.library.MathView>

    <io.github.kexanie.library.MathView
        android:id="@+id/math2"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="407dp"
        android:layout_toEndOf="@+id/chartAns"
        android:layout_toRightOf="@+id/chartAns">

    </io.github.kexanie.library.MathView>

    <SeekBar
        android:id="@+id/seekBar4"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:clickable="false"
        android:enabled="false"
        android:fadeScrollbars="false"
        android:max="15"
        android:progress="15" />

    <Button
        android:id="@+id/btsendans"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:background="@color/colorPrimary"
        android:text="ส่งคำตอบ"
        android:textColor="#fff"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/result1"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="161dp"
        android:text="" />

    <TextView
        android:id="@+id/result2"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="423dp"
        android:text="" />

    <TextView
        android:id="@+id/Showcount"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seekBar4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="345dp"
        android:layout_marginBottom="-563dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Showscore"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/seekBar4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="297dp"
        android:layout_marginLeft="297dp"
        android:layout_marginTop="589dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="-563dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25dp" />


</RelativeLayout>